{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "check",
            "command": "zig",
            "args": ["check"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$zig"],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
            }
        },
        {
            "label": "build",
            "command": "zig",
            "args": ["build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$zig"],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },

        {
            "label": "build -Dsingle-threaded",
            "command": "zig",
            "args": ["build", "-Dsingle-threaded"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$zig"],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "test",
            "command": "zig",
            "args": ["build", "test"],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": ["$zig"],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "create tmp/ast.json",
            "type": "shell",
            "command": "${workspaceFolder}/tasks/create-ast-json.sh",
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "pre print-ast",
            "dependsOn": [
                "create tmp/ast.json",
                "build -Dsingle-threaded"
            ]
        }
    ],
}
