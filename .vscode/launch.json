    "version": "0.2.0",
    "configurations": [
        {
            "name": "zlint [multi-thread]",
            "type": "lldb",
            "request": "launch",
            "program": "./zig-out/bin/zlint",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build",
            "postRunCommands": ["command source '${workspaceFolder}/tasks/lldb/.lldbinit'"]
        },
        {
            "name": "zlint",
            "type": "lldb",
            "request": "launch",
            "program": "./zig-out/bin/zlint",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build -Dsingle-threaded",
            "postRunCommands": ["command source '${workspaceFolder}/tasks/lldb/.lldbinit'"]
        },
        {
            "name": "zlint [bun]",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/zig-out/bin/zlint",
            "cwd": "/Users/donisaac/Documents/projects/bun/bun",
            // "preLaunchTask": "build -Dsingle-threaded",
            "postRunCommands": ["command source '${workspaceFolder}/tasks/lldb/.lldbinit'"]
        },
        {
            "name": "zlint --print-ast ${file}",
            "type": "lldb",
            "request": "launch",
            "args": ["--print-ast", "${relativeFile}"],
            "program": "${workspaceRoot}/zig-out/bin/zlint",
            "cwd": "${workspaceRoot}",
            "stdio": "${workspaceRoot}/tmp/ast.json",
            "preLaunchTask": "pre print-ast",
            "postRunCommands": ["command source '${workspaceFolder}/tasks/lldb/.lldbinit'"]
        },
        {
            "name": "test-e2e",
            "type": "lldb",
            "request": "launch",
            "program": "./zig-out/bin/test-e2e",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build -Dsingle-threaded",
            "postRunCommands": ["command source '${workspaceFolder}/tasks/lldb/.lldbinit'"]
        },
        {
            "name": "test",
            "type": "lldb",
            "request": "launch",
            "program": "./zig-out/bin/test",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build -Dsingle-threaded",
            "postRunCommands": ["command source '${workspaceFolder}/tasks/lldb/.lldbinit'"]
        },
        {
            "name": "test-utils",
            "type": "lldb",
            "request": "launch",
            "program": "./zig-out/bin/test-utils",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build -Dsingle-threaded",
            "postRunCommands": ["command source '${workspaceFolder}/tasks/lldb/.lldbinit'"]
        },
        // {
        //     "name": "zig test [file]",
