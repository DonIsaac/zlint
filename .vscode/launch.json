    "version": "0.2.0",
    "configurations": [
        {
            "name": "zlint",
            "type": "lldb",
            "request": "launch",
            "program": "./zig-out/bin/zlint",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build -Dsingle-threaded"
        },
        {
            "name": "zlint --print-ast",
            "type": "lldb",
            "request": "launch",
            "args": ["--print-ast"],
            "program": "${workspaceRoot}/zig-out/bin/zlint",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build"
        },
        {
            "name": "test-e2e",
            "type": "lldb",
            "request": "launch",
            "program": "./zig-out/bin/test-e2e",
            "cwd": "${workspaceRoot}",
        },
    ]
}
